<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@color/background_color"
    tools:context=".Common.LeadersActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Leaders Report"
        android:textSize="20sp"
        android:id="@+id/titleOfLeaders"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/layoutForSector">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Generate Cell Leaders Report"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:id="@+id/generateCellLeaders"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/layoutForDistrict">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Sector Leaders"
            android:textAllCaps="false"
            android:layout_marginRight="2dp"
            android:id="@+id/generateSectorLeadersDistrict"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Cell Leaders"
            android:textAllCaps="false"
            android:layout_marginRight="2dp"
            android:id="@+id/generateCellLeadersDistrict"/>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/leadersRecyclerView"/>


</LinearLayout>